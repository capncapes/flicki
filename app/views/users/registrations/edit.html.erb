<h2><%= current_user.first_name %> <%= current_user.last_name %>
  <% if current_user.role == "standard" %>
    <span class="badge badge-standard">Standard</span>
  <% elsif current_user.role == "premium" %>
    <span class="badge badge-premium">Premium</span>
  <% elsif current_user.role == "admin" %>
    <span class="badge badge-admin">Administrator</span>
  <% end %>
</h2>
<div class="row">
  <div class="col-md-3">
    <h3>Account Details</h3>
    <p>Account Type: <%= current_user.role.capitalize %></p>
    <% if current_user.role == "standard" %>
      <%= link_to "Upgrade to Premium", new_charge_path, class: 'btn btn-flicki' %>
    <% elsif current_user.role == "premium" %>
      <%= button_to "Return to Standard", users_downgrade_path(current_user), data: { confirm: "Are you sure?" }, method: :downgrade, class: 'btn btn-flicki' %>
    <% end %>

    <h3>Cancel Account</h3>
    <p>Unhappy? <%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
  <div class="col-md-9">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autocomplete: "on" %>
      </div>
      
      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autocomplete: "on" %>
      </div>

      <div class="field field-margin">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field field-margin">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field field-margin">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>
  </div>
</div>
<%= link_to "Back", :back %>
