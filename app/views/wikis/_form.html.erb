 <%= form_for @wiki do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Flicki title" %>
    </div>
    <div class="form-group">
        <%= f.label :director %>
        <%= f.text_field :director, class: 'form-control', placeholder: "Enter Flicki director" %>
    </div>
    <div class="form-group">
        <%= f.label :year %>
        <%= f.select(:year, 1940..2017) %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 6, class: 'form-control', placeholder: "Describe the Flicki" %>
    </div>
    <% if current_user.admin? || current_user.premium? %>
        <div class="form-check">
            <%= f.label :private, class: 'form-check-input' do %>
                <%= f.check_box :private %> Private Flicki
            <% end %>
        </div>
    <% end %>
    <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>