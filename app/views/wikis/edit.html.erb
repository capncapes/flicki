<h1>Edit "<%= @wiki.title %>"</h1>

<div class="row">
    <div class="col-md-3">
        <h3>Please update information about the Flicki in the fields provided.</h3>
    </div>
    <div class="col-md-9">
        <%= form_for @wiki do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control', placeholder: "Enter Flicki title" %>
            </div>
            <div class="form-group">
                <%= f.label :director %>
                <%= f.text_field :director, class: 'form-control', placeholder: "Enter Flicki director" %>
            </div>
            <div class="form-group">
                <%= f.label :year %>
                <%= f.select(:year, 1940..2017) %>
            </div>
            <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, rows: 6, class: 'form-control', placeholder: "Describe the Flicki" %>
            </div>
            <div class="form-group">
                <%= f.label :private %>
                <%= f.check_box :private %>
            </div>
            <div class="form-group">
                <%= f.submit "Save", class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>